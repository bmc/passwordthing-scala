# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Site password routes
GET     /sites                      controllers.Application.sites
GET     /site/new                   controllers.Application.newSite

POST    /sign-in                    controllers.Auth.authenticate
GET     /login                      controllers.Auth.login
GET     /logout                     controllers.Auth.logout

GET     /admin                      controllers.Admin.index
POST    /admin/users                controllers.Admin.listUsers
GET     /admin/user/:id/edit        controllers.Admin.editUser(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
